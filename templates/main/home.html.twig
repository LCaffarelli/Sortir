{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Home {% endblock %}

{% block body %}

    <h1 class="titreListeCard">Listes des sorties</h1>
    <section class="ListeCards">
        {% for s in sortie %}
            <div class="cards">
                <div class="card-image">
                    <img src="{{ asset('img/bowling.jpg') }}"  width="" alt="Image en cours">
                </div>

                <div class="card-body">
                    <div class="card-title">
                        <h2><a class="detailSortie" href="">{{ s.nom }}</a></h2>
                    </div>
                    <div class="card-description">
                        <h4>Description de la sortie :</h4>
                        {{ s.infosSortie }}

                        <h4>Date de la sortie :</h4>
                        <p>{{ s.dateHeureDebut.format('d-m-Y') }}</p>

                        <h4>Cl√¥ture :</h4>
                        <p>{{ s.dateLimiteInscription.format('d-m-Y') }}</p>

                        <h4>Inscrits/places :</h4>
                        <p>{{ s.participants.count }} / {{ s.nbInscriptionsMax }}</p>

                        <h4>Organisateur : </h4>
                        <p>{{ s.organisateur.nom }}</p>

                        <h4>Etat :</h4>
                        <p>{{ s.etat.libelle }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>


{% endblock %}