{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} | Profil de {{ user.pseudo }} {% endblock %}


{% block body %}
    <link rel="stylesheet" href="{{ asset('css/detailParticipant.css') }}">

    <div class="bodyDetailParticipant">
        <div class="cardSortie">

            <div class="div1">
                <h1>{{ user.pseudo }}</h1>
            </div>
            <br>
            <div class="div2">
                <div>
                    <img class="img" src="{{ asset('img/profil/'~user.image) }}" alt="image profil participant">
                </div>
            </div>

            <div class="div3">
                <div>
                    <div>
                        <label for="nom">Nom : </label>
                        {{ user.nom }}
                    </div>
                    <br>
                    <div>
                        <label for="prenom">Prénom : </label>
                        {{ user.prenom }}
                    </div>
                    <br>
                    <div>
                        <label for="tel">Téléphone : </label>
                        {{ user.telephone }}
                    </div>
                    <br>
                    <div>
                        <label for="email">Email : </label>
                        {{ user.email }}
                    </div>
                    <br>
                    <div>
                        <label for="site">Site de rattachement :</label>
                        {{ user.site.nom }}
                    </div>
                    <br>
                </div>
                <div class="div4">
                    <div class="btnDetailParticipant">
                        <button onclick="precedent()">Retour</button>
                        <a href="{{ path('main_home') }}">
                            <button>Accueil</button>
                        </a>
                    </div>
                </div>


            </div>

        </div>

    </div>


{% endblock %}



