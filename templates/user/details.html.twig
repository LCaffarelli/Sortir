{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} | Profil de {{ user.pseudo }} {% endblock %}


{% block body %}
    <script src="{{ asset('js/profilParticipant.js') }}" defer></script>
    <div class="ProfilParticipant">
        <div class="InfoGlobalParticipant">
            <div class="titrePseudoP">
                <h1>{{ user.pseudo }}</h1>
            </div>
            <br>

            <div class="EmplacementImageP">
                <div class="imageParticipant">
                    <img id="imgParticipant" src="{{ asset('img/profil/'~user.image) }}" alt="image profil participant">
                </div>
            </div>
            <br>

            <div class="InfoP">
                <div>
                    <div>
                        <label for="nom">Nom : </label>
                        <div>
                            {{ user.nom }}
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="prenom">Prénom : </label>
                        <div>
                            {{ user.prenom }}
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="tel">Téléphone : </label>
                        <div>
                            {{ user.telephone }}
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="email">Email : </label>
                        <div>
                            {{ user.email }}
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="site">Site de rattachement :</label>
                        <div>
                            {{ user.site.nom }}
                        </div>
                    </div>
                    <br>
                </div>
                <br>

            </div>
            <div class="boutonFooter">
                <div class="btnDetailParticipant">
                    <button id="btnRetourDetail" onclick="precedent()">Retour</button>
                    <a id="btnAccueilDetail" href="{{ path('main_home') }}">
                        <button>Accueil</button>
                    </a>
                </div>
            </div>
        </div>

    </div>


{% endblock %}



